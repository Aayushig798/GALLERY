      android:textSize="20sp"
      android:textStyle="bold"
      android:textColor="#FFA500"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="DELETE"
      android:fontFamily="sans-serif-condensed"
